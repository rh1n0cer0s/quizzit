%p.lead Login:

- if flash[:error]
  %p.alert.alert-error= flash[:error]

= labelled_form_for(@user, :url => login_path) do |f|
  = back_url_hidden_field_tag 
  = f.text_field :email
  = f.password_field :password
  = f.submit_button "Login!"
  .control-group
    .controls.text-small
      No account?
      = link_to "Sign-up!", signup_path
