%ul.breadcrumb
  %li
    = link_to "Quizzes", quizzes_path
    %span.divider &raquo;
  %li 
    = link_to @quiz.name, quiz_path(@quiz)
    %span.divider &raquo;
  %li= @question.title

%ul.nav.nav-pills.pull-right
  %li
    = link_to quiz_question_path(@quiz, @question), :method => :delete, :confirm => "Are you sure you want to delete this question?" do
      %i.icon.icon-trash
      Delete

%h4 Edit question

= render "form"
